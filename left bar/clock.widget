layout {
  style = "frame"

  label {
    style = "time"
    interval = 1000
    css = "* { font: 0.3cm Sans; font-weight: 700; -GtkWidget-align: 0.5; -GtkWidget-hexpand: true; -GtkWidget-vexpand: true; }"
    value = Time("%I:%M:%S")
  }

  label {
    style = "date"
    interval = 1000
    css = "label { -GtkWidget-align: 0.5; -GtkWidget-hexpand: true; -GtkWidget-vexpand: true; }"
    value = Time("%a %b %d")
  }
}
